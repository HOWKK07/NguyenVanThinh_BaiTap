@model IEnumerable<NguyenVanThinh_BaiTap.Models.Thinh_Xe>
@{
    ViewData["Title"] = "Danh sách Xe";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Index" method="get" class="mb-3">
    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Tìm kiếm xe..." class="form-control" style="width:300px;display:inline-block;" />
    <button type="submit" class="btn btn-primary">Tìm</button>
    <a asp-action="Create" class="btn btn-success float-end">Thêm mới</a>
</form>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên Xe</th>
            <th>Hãng Xe</th>
            <th>Giá</th>
            <th>Ngày Sản Xuất</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Thinh_TenXe</td>
                <td>@item.Thinh_HangXe?.Thinh_TenHang</td>
                <td>@item.Thinh_Gia.ToString("N0")</td>
                <td>@item.Thinh_NgaySanXuat.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Thinh_XeID" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Thinh_XeID" class="btn btn-danger btn-sm">Xóa</a>
                    <a asp-action="Details" asp-route-id="@item.Thinh_XeID" class="btn btn-info btn-sm">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}