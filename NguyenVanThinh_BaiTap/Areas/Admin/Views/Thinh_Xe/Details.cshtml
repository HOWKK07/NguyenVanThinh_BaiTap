@model NguyenVanThinh_BaiTap.Models.Thinh_Xe
@{
    ViewData["Title"] = "Chi tiết Xe";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Thinh_TenXe</h4>

        <dl class="row">
            <dt class="col-sm-3">Hãng xe:</dt>
            <dd class="col-sm-9">@Model.Thinh_HangXe?.Thinh_TenHang</dd>

            <dt class="col-sm-3">Giá:</dt>
            <dd class="col-sm-9 text-danger font-weight-bold">@Model.Thinh_Gia.ToString("N0") VNĐ</dd>

            <dt class="col-sm-3">Ngày sản xuất:</dt>
            <dd class="col-sm-9">@Model.Thinh_NgaySanXuat.ToString("dd/MM/yyyy")</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Thinh_XeID" class="btn btn-warning">Sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>