@model NguyenVanThinh_BaiTap.Models.Thinh_HangXe
@{
    ViewData["Title"] = "Chi tiết Hãng Xe";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Thinh_TenHang</h4>

        <h5 class="mt-4">Danh sách xe của hãng</h5>
        @if (Model.Thinh_Xes != null && Model.Thinh_Xes.Any())
        {
            <table class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <th>Tên Xe</th>
                        <th>Giá</th>
                        <th>Ngày Sản Xuất</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var xe in Model.Thinh_Xes)
                    {
                        <tr>
                            <td>@xe.Thinh_TenXe</td>
                            <td>@xe.Thinh_Gia.ToString("N0") VNĐ</td>
                            <td>@xe.Thinh_NgaySanXuat.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Chưa có xe nào thuộc hãng này.</p>
        }
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Thinh_HangXeID" class="btn btn-warning">Sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>