@model NguyenVanThinh_BaiTap.Models.Thinh_HangXe
@{
    ViewData["Title"] = "Thêm Hãng Xe";
}
<h2>@ViewData["Title"]</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Thinh_TenHang" class="form-label">Tên Hãng Xe</label>
        <input asp-for="Thinh_TenHang" class="form-control" />
        <span asp-validation-for="Thinh_TenHang" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}