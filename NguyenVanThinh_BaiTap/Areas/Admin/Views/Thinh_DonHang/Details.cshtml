@model NguyenVanThinh_BaiTap.Models.Thinh_DonHang
@{
    ViewData["Title"] = "Chi tiết Đơn Hàng";
}

<h2>@ViewData["Title"]</h2>

<div class="card mb-3">
    <div class="card-header">
        <h4>Thông tin đơn hàng</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Mã đơn hàng:</dt>
                    <dd class="col-sm-8">@Model.MaDonHang</dd>

                    <dt class="col-sm-4">Ngày đặt:</dt>
                    <dd class="col-sm-8">@Model.NgayDatHang.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Trạng thái:</dt>
                    <dd class="col-sm-8">@Model.TrangThai</dd>

                    <dt class="col-sm-4">Ngày giao:</dt>
                    <dd class="col-sm-8">@(Model.NgayGiao?.ToString("dd/MM/yyyy") ?? "Chưa giao")</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Khách hàng:</dt>
                    <dd class="col-sm-8">@Model.TenKhachHang</dd>

                    <dt class="col-sm-4">Số điện thoại:</dt>
                    <dd class="col-sm-8">@Model.SoDienThoai</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Địa chỉ:</dt>
                    <dd class="col-sm-8">@Model.DiaChi</dd>
                </dl>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.GhiChu))
        {
            <div class="row">
                <div class="col-12">
                    <dt>Ghi chú:</dt>
                    <dd>@Model.GhiChu</dd>
                </div>
            </div>
        }
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h4>Chi tiết đơn hàng</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên xe</th>
                    <th>Hãng xe</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int stt = 1;
                }
                @foreach (var chiTiet in Model.Thinh_ChiTietDonHangs)
                {
                    <tr>
                        <td>@stt</td>
                        <td>@chiTiet.Thinh_Xe?.Thinh_TenXe</td>
                        <td>@chiTiet.Thinh_Xe?.Thinh_HangXe?.Thinh_TenHang</td>
                        <td>@chiTiet.SoLuong</td>
                        <td>@chiTiet.DonGia.ToString("N0") VNĐ</td>
                        <td>@chiTiet.ThanhTien.ToString("N0") VNĐ</td>
                    </tr>
                    stt++;
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="5" class="text-right">Tổng tiền:</th>
                    <th class="text-danger">@Model.TongTien.ToString("N0") VNĐ</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="card-footer">
        <a asp-action="UpdateStatus" asp-route-id="@Model.Thinh_DonHangID" class="btn btn-warning">Cập nhật trạng thái</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>