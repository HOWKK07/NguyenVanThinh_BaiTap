@model List<NguyenVanThinh_BaiTap.Models.Thinh_Xe>
@{
    ViewData["Title"] = "Giỏ hàng";
}

<h2>@ViewData["Title"]</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        <p>Giỏ hàng của bạn đang trống.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Tiếp tục mua sắm</a>
    </div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tên Xe</th>
                <th>Hãng</th>
                <th>Giá</th>
                <th>Ngày Sản Xuất</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var xe in Model)
            {
                <tr>
                    <td>@xe.Thinh_TenXe</td>
                    <td>@xe.Thinh_HangXe?.Thinh_TenHang</td>
                    <td>@xe.Thinh_Gia.ToString("N0") VNĐ</td>
                    <td>@xe.Thinh_NgaySanXuat.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="2">Tổng cộng:</th>
                <th colspan="2">@Model.Sum(x => x.Thinh_Gia).ToString("N0") VNĐ</th>
            </tr>
        </tfoot>
    </table>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Tiếp tục mua sắm</a>
        <a asp-action="Checkout" class="btn btn-success">Thanh toán</a>
    </div>
}