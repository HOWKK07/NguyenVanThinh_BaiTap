@model NguyenVanThinh_BaiTap.Models.Thinh_DonHang
@{
    ViewData["Title"] = "Thanh toán";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="CompleteOrder" method="post">
    <div class="mb-3">
        <label asp-for="TenKhachHang"></label>
        <input asp-for="TenKhachHang" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="SoDienThoai"></label>
        <input asp-for="SoDienThoai" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="DiaChi"></label>
        <input asp-for="DiaChi" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Hoàn thành</button>
</form>